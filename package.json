{
  "name": "triiiceratops",
  "version": "0.4.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d-flood/triiiceratops.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "private": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "svelte": "./dist/index.js",
  "style": "./dist/triiiceratops.css",
  "types": "./dist/src/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/lib/index.d.ts",
      "style": "./dist/triiiceratops.css",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./plugins/image-manipulation": {
      "types": "./dist/src/lib/plugins/image-manipulation/index.d.ts",
      "svelte": "./dist/plugins/image-manipulation.js",
      "import": "./dist/plugins/image-manipulation.js"
    },
    "./element": {
      "import": "./dist/triiiceratops-element.js"
    },
    "./element.iife": "./dist/triiiceratops-element.iife.js",
    "./style.css": "./dist/triiiceratops.css"
  },
  "peerDependencies": {
    "manifesto.js": "^4.0.0",
    "openseadragon": "^5.0.0",
    "svelte": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "svelte": {
      "optional": true
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build:element": "vite build --config vite.config.element.ts",
    "build:demo": "vite build --config vite.config.demo.ts",
    "build:consumer": "vite build --config vite.config.demo-consumer.ts",
    "build:all": "pnpm build:lib && pnpm build:element && pnpm build:demo && pnpm build:consumer",
    "preview": "vite preview",
    "dev:consumer": "vite --config vite.config.demo-consumer.ts",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "test": "vitest",
    "test:e2e": "playwright test",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@inlang/paraglide-js": "^2.5.0",
    "@inlang/paraglide-vite": "^1.4.0",
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/openseadragon": "^5.0.1",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "phosphor-svelte": "^3.0.1",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "typescript": "~5.9.3",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "daisyui": "^5.5.8",
    "manifesto.js": "^4.3.0",
    "openseadragon": "^5.0.1",
    "tailwindcss": "^4.1.17"
  }
}
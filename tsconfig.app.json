{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "es2022",
        "useDefineForClassFields": true,
        "module": "esnext",
        "types": ["svelte", "vite/client"],
        "noEmit": true,

        "allowJs": true,
        "checkJs": true,
        "moduleDetection": "force",
        "composite": true
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
